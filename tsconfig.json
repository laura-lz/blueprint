{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*",
		"cli/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"samples",
		"out"
	]
}
