{
    "name": "nexhacks-agent",
    "version": "1.0.0",
    "description": "Codebase documentation agent - generates wiki summaries and Mermaid diagrams",
    "type": "module",
    "main": "src/core/index.ts",
    "bin": {
        "nexhacks-agent": "./cli/index.ts"
    },
    "scripts": {
        "dev": "npm run dev --prefix samples/calculator",
        "build": "npm run build --prefix samples/calculator",
        "agent": "npx tsx cli/index.ts",
        "agent:sample": "npx tsx cli/index.ts --target ./samples/calculator --output ./output",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "codebase",
        "documentation",
        "wiki",
        "mermaid",
        "agent",
        "openrouter"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@babel/parser": "^7.23.0",
        "@babel/traverse": "^7.23.0",
        "@babel/types": "^7.23.0",
        "commander": "^12.0.0",
        "dotenv": "^17.2.3"
    },
    "devDependencies": {
        "@types/babel__traverse": "^7.20.0",
        "@types/node": "^20.0.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
